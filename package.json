{
    "name": "ton-dice",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "tsx watch src/bot/index.ts",
        "dev:api": "tsx watch src/api/index.ts",
        "dev:puller": "tsx watch src/api/deposit-puller.ts",
        "build": "tsc -p .",
        "start": "node dist/bot/index.js",
        "start:api": "node dist/api/index.js",
        "start:puller": "node dist/api/deposit-puller.js",
        "test": "vitest run",
        "db:generate": "prisma generate",
        "db:push": "prisma db push",
        "db:migrate": "prisma migrate dev",
        "web:install": "npm --prefix web install",
        "web:dev": "npm --prefix web run dev",
        "web:build": "npm --prefix web run build",
        "web:tunnel": "node scripts/start-web-tunnel.mjs"
    },
    "dependencies": {
        "@prisma/client": "^5.22.0",
        "axios": "^1.6.0",
        "better-sqlite3": "^9.4.0",
        "cors": "^2.8.5",
        "crypto": "^1.0.1",
        "dotenv": "^16.4.5",
        "express": "^4.18.2",
        "helmet": "^7.1.0",
        "node-cron": "^3.0.3",
        "prisma": "^5.22.0",
        "telegraf": "^4.16.3"
    },
    "devDependencies": {
        "@types/better-sqlite3": "^7.6.13",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/node": "^20.11.30",
        "localtunnel": "^2.0.2",
        "tsx": "^4.7.0",
        "typescript": "^5.5.3",
        "vitest": "^1.6.0"
    }
}